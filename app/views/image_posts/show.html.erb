<p style="color: green"><%= notice %></p>

<%= render @image_post %>

<div>
  <%= link_to "Edit this image post", edit_image_post_path(@image_post) %> |
  <%= link_to "Back to image posts", image_posts_path %>

  <%= button_to "Destroy this image post", @image_post, method: :delete %>
</div>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if @post.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

